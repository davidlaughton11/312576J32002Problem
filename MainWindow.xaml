<Window x:Class="_312576j3Problems2002.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_312576j3Problems2002"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="725">
    <StackPanel>
        <TextBlock Height="19">How much must be raised with ticket sales?</TextBlock>
        <TextBox x:Name="numInput" 
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 KeyUp="numInput_KeyUp"
                 Text="Cost of pink tickets:" />
        <Button Click="Button_Click" Content="Click to run" />
        <Label x:Name="lblOutput"/>
    </StackPanel>
</Window>
